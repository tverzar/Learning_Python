import random

def is_valid(s):
    return s.isdigit() and 1 <= int(s) <= 100

def main():
    while True:  # Добавлен цикл для повторения игры
        num1 = random.randint(1, 100)
        count = 0
        print('Добро пожаловать в числовую угадайку')
        while True:
            n = input('Введите целое число от 1 до 100: ')
            if not is_valid(n):
                print('А может быть все-таки введем целое число от 1 до 100?')
                continue
            n = int(n)
            count += 1
            if n < num1:
                print('Ваше число меньше загаданного, попробуйте еще разок')
            elif n > num1:
                print('Ваше число больше загаданного, попробуйте еще разок')
            else:
                print(f'Вы угадали, поздравляем! Кол-во попыток: {count}')
                break
        again = input('Хотите ли выграть еще раз? (да/нет): ')
        if again.lower() != 'да':
            print('Спасибо, что играли в числовую угадайку. Еще увидимся...')
            break  # Выход из цикла повторения игры
if __name__ == "__main__":
    main()
